<?xml version="1.0" encoding="ISO-8859-1" ?>
<database>

 <name>MDB2Example</name>
 <create>true</create>
 <overwrite>true</overwrite>

 <table>

  <name>Table1</name>

  <declaration>

   <field>
    <name>foo</name>
    <type>integer</type>
    <unsigned>true</unsigned>
    <length>4</length>
    <notnull>true</notnull>
    <default>0</default>
    <autoincrement>1</autoincrement>
   </field>

   <field>
    <name>bar</name>
    <type>text</type>
    <length>128</length>
    <notnull>false</notnull>
    <default></default>
   </field>

   <field>
    <name>foolish</name>
    <type>integer</type>
    <unsigned>true</unsigned>
    <length>4</length>
    <notnull>false</notnull>
    <default>7</default>
   </field>

   <field>
    <name>creation</name>
    <type>timestamp</type>
    <notnull>false</notnull>
    <default></default>
   </field>

   <index>
    <name>PRIMARY</name>
    <primary>true</primary>
    <field>
     <name>foo</name>
     <sorting>ascending</sorting>
    </field>
   </index>

  </declaration>

  <initialization>

   <insert>
    <field>
     <name>foo</name>
     <value>7</value>
    </field>
    <field>
     <name>bar</name>
     <value>Tux</value>
    </field>
    <field>
     <name>foolish</name>
     <expression>
      <column>foo</column>
      <operator>PLUS</operator>
      <value>70</value>
     </expression>
    </field>
    <field>
     <name>creation</name>
     <function>
      <name>now</name>
     </function>
    </field>
   </insert>

   <insert>
    <field>
     <name>foo</name>
     <value>77</value>
    </field>
    <field>
     <name>bar</name>
     <value>Rocks</value>
    </field>
    <field>
     <name>foolish</name>
     <expression>
      <column>foo</column>
      <operator>PLUS</operator>
      <value>700</value>
     </expression>
    </field>
    <field>
     <name>creation</name>
     <function>
      <name>now</name>
     </function>
    </field>
   </insert>

   <insert>
    <field>
     <name>foo</name>
     <value>777</value>
    </field>
    <field>
     <name>bar</name>
     <value>!</value>
    </field>
    <field>
     <name>foolish</name>
     <expression>
      <column>foo</column>
      <operator>MINUS</operator>
      <value>700</value>
     </expression>
    </field>
    <field>
     <name>creation</name>
     <function>
      <name>now</name>
     </function>
    </field>
   </insert>

   <insert>
    <field>
     <name>foo</name>
     <value>888</value>
    </field>
    <field>
     <name>bar</name>
     <value>cassino</value>
    </field>
   </insert>

   <delete>
    <where>
     <expression>
      <column>foo</column>
      <operator>GREATER THAN</operator>
      <value>777</value>
     </expression>
    </where>
   </delete>

  </initialization>

 </table>

